<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Kalkulator Sederhana"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/inputBil1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan angka pertama"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/inputBil2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan angka kedua"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btnTambah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tambah (+)" />

        <Button
            android:id="@+id/btnKurang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Kurang (-)" />

        <Button
            android:id="@+id/btnKali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Kali (*)" />

        <Button
            android:id="@+id/btnBagi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Bagi (/)" />

        <Button
            android:id="@+id/btnPangkat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Pangkat (^)" />

        <Button
            android:id="@+id/btnAkarPangkat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Akar Pangkat" />

        <TextView
            android:id="@+id/txtHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Hasil: "
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
